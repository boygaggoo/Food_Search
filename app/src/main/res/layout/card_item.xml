<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="18dp"
    android:layout_marginStart="18dp"
    android:background="#00000000"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_image_height"/>

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/card_image"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/headline_font_size"/>

            <TextView
                android:id="@+id/card_hostpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_image"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:autoLink="web"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:textColor="@android:color/darker_gray"
                android:textColorLink="@color/colorLink"
                android:textSize="@dimen/subhead_font_size"/>

            <TextView
                android:id="@+id/card_contentURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_hostpage"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:autoLink="web"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:textColorLink="@color/colorLink"
                android:textSize="@dimen/subhead_font_size"/>

            <TextView
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_contentURL"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/subhead_font_size"
                android:id="@+id/card_description" />
        </android.support.percent.PercentRelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>