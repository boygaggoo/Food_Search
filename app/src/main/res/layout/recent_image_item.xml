<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recent_image_card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="@dimen/activity_half_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_half_margin"
    android:background="#00000000">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/recent_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/recent_image_view"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/recent_image_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@id/recent_image_view"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_font_size" />

        <TextView
            android:id="@+id/recent_image_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/recent_image_date"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_half_margin"
            android:layout_toRightOf="@id/recent_image_view"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/subhead_font_size" />
    </android.support.percent.PercentRelativeLayout>

    <ImageView
        android:id="@+id/remove_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="35dp"
        android:visibility="invisible" />
</android.support.v7.widget.CardView>